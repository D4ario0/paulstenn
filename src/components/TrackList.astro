---
import Track from "./Track.astro";
import cover1 from "../assets/dancing.jpg"
import cover2 from "../assets/make_it.jpg"
import cover3 from "../assets/night_circuit.jpg"
import cover4 from "../assets/hero_item.jpg"
import cover5 from "../assets/europeo.jpg"

const tracks = [
    { numero: "01", musica: "DANCING", autor: "Paul Stenn, Bryant BRX, KC1205", imgLink: cover1 },
    { numero: "02", musica: "Make it", autor: "Paul Stenn, Bryant BRX", imgLink: cover2 },
    { numero: "03", musica: "Night Circuit", autor: "Paul Stenn", imgLink: cover3 },
    { numero: "04", musica: "COMO TE LLAMAS", autor: "Paul Stenn, ALIVVX", imgLink: cover4 },
    { numero: "05", musica: "Europeo", autor: "Paul Stenn, ALIVVX, KoK8", imgLink: cover5 }
];
---

<section class="h-auto flex flex-col items-center w-full gap-6" id="tracks">
    <div class="w-3/4">
        <h1 class="text-satoshi font-light tracking-wider text-left text-3xl text-gray-400">
        Tracks
        </h1>
    </div>
    <ul class="list bg-base-100 rounded-box shadow-md w-9/10 sm:w-3/4 mx-auto">
        <li class="p-4 pb-2"></li>
        {tracks.map((t) => <Track {...t} />)}
        <li class="p-4 pb-2 text-xs opacity-60 tracking-wide italic text-right">
            Lo mas escuchado en Spotify
        </li>
    </ul>
</section>

