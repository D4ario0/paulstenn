---
const links = [
    { title: "Tracks", ref: "#tracks" },
    { title: "Eventos", ref: "#eventos" },
    { title: "Contacto", ref: "#contacto" },
];
---

<div
    class="flex justify-between h-[10vh] items-center px-4 sm:px-6 md:px-10 xl:px-36 fade-in-slow text-gray-300 font-satoshi font-bold tracking-widest"
>
    <span
        class="text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl"
    >
        Paul
        <span class="text-accent"> Stenn </span>
    </span>
    <nav
        class="flex gap-3 sm:gap-4 md:gap-6 text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl"
    >
        {
            links.map((l) => (
                <a
                    href={l.ref}
                    class="hover:text-white transition-colors duration-200"
                >
                    {l.title}
                </a>
            ))
        }
    </nav>
</div>
